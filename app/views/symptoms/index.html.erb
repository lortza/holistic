<p id="notice"><%= notice %></p>

<h1>Symptoms Index</h1>
<%= link_to '+ New Symptom', new_symptom_path %>

<table class="table">
  <thead>
    <tr>
      <th>Symptom</th>
      <th>Subdosha Responsible</th>
      <th>Body System</th>
      <th colspan="3">Manage Symptom</th>
    </tr>
  </thead>

  <tbody>
    <% @symptoms.each do |symptom| %>
      <tr>
        <td><%= link_to symptom.name.titlecase, symptom %></td>
        <td>
          <ul>
            <% symptom.subdoshas.each do |subdosha| %>
              <li><%= link_to display_subdosha_fullname(subdosha), subdosha %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to symptom.system.name, symptom.system %></td>
        <td><%= link_to 'Show', symptom %></td>
        <td><%= link_to 'Edit', edit_symptom_path(symptom) %></td>
        <td><%= link_to 'Destroy', symptom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

