<p id="notice"><%= notice %></p>

<h1>Listing Doshas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doshas.each do |dosha| %>
      <tr>
        <td><%= dosha.name %></td>
        <td><%= link_to 'Show', dosha %></td>
        <td><%= link_to 'Edit', edit_dosha_path(dosha) %></td>
        <td><%= link_to 'Destroy', dosha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

